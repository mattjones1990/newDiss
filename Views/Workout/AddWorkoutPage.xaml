                  Grid.Column="2"
                  Grid.ColumnSpan="3"/>-->

           <DatePicker Format="D"
                       x:Name="DatePicker"
                       Grid.Row="2" 
                       Grid.Column="2" 
                       Grid.ColumnSpan="3"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       FontFamily="Boulder"

                       />
            
           <Entry Placeholder="Location"
                  FontFamily="Boulder"
                  FontSize="Medium" 
                  HorizontalTextAlignment="Left"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand"
                  x:Name="LocationField"
                  Grid.Row="3" 
                  Grid.Column="2" 
                  Grid.ColumnSpan="3"
                  IsPassword="false"/>

        <Picker x:Name="MuscleGroupPicker1"
                Title="Primary Muscle Group"
                
                FontFamily="Boulder" 
                FontSize="Medium"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Grid.Row="4" 
                Grid.Column="2"
                Grid.ColumnSpan="3"
                >
            <Picker.Items>
                <x:String>Legs (do it!)</x:String> 
                <x:String>Chest</x:String>
                <x:String>Shoulders</x:String> 
                <x:String>Back</x:String>
                <x:String>I don't need help!</x:String>
            </Picker.Items>
        </Picker> 

        <Picker x:Name="MuscleGroupPicker2"
                Title="Secondary Muscle Group"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Grid.Row="5" 
                Grid.Column="2"
                Grid.ColumnSpan="3">
            <Picker.Items>
                <x:String>Legs (do it!)</x:String> 
                <x:String>Chest</x:String>
                <x:String>Shoulders</x:String> 
                <x:String>Back</x:String>
                <x:String>None</x:String>
            </Picker.Items>
        </Picker> 






            
