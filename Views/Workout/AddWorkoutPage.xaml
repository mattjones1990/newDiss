            <Button Text="Add Workout"
                BackgroundColor="White"
                Font="Medium"
                Grid.Row="7" 
                Grid.Column="2"
                Grid.ColumnSpan="3"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="#06a4cc"
                Clicked="Handle_Clicked"/>


            <Label 
               Text = "*selecting a primary/secondary muscle group will allow the app to suggest what weight/reps you should be completing for your compound lifts."
               Grid.Row="8" 
               Grid.Column="1" 
               Grid.ColumnSpan="5"
               HorizontalTextAlignment="Center" 
               VerticalTextAlignment="End"
               FontFamily="Boulder"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="White"/>

            
