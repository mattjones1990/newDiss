            <Image  Source="" 
                    Grid.Row="1" 
                    Grid.Column="1"/>
        </Frame>-->
           
           <Label 
               Text = "New Workout Details"
               Grid.Row="0" 
               Grid.Column="2" 
               Grid.ColumnSpan="3"
               HorizontalTextAlignment="Center" 
               VerticalTextAlignment="End"
               FontFamily="Boulder"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="White"/>

<!--           <Entry Placeholder="Workout Date"                 
                  FontFamily="Boulder"
                  FontSize="Medium" 
                  HorizontalTextAlignment="Center"
