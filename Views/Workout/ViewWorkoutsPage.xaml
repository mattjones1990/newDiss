<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Dissertation.Views.Workout.ViewWorkoutsPage"
             Title="Workouts"
             >
    <ContentPage.Content>
        <ListView x:Name="workoutList"
                  ItemTapped="ViewExercises"
                  HasUnevenRows="true"
                  BackgroundColor="White" 
                  SeparatorColor="#06a4cc" 
                  SeparatorVisibility="None">
            
            <ListView.ItemTemplate>  
                <DataTemplate >  
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Delete"
                                      Clicked="DeleteWorkout"                                    
                                      IsDestructive="true"
                                      CommandParameter="{Binding .}">                              
                            </MenuItem>

                            <MenuItem Text="Edit"
                                      Clicked="EditWorkout"                                    
                                      IsDestructive="false"
                                      CommandParameter="{Binding .}">                              
                            </MenuItem>
                        </ViewCell.ContextActions>

                        <StackLayout>
                            
                        
                        <StackLayout Orientation="Horizontal"
                                     Padding="5">
                            <StackLayout>

                            <Label Text="{Binding WorkoutDate, StringFormat='{0:dd-MMM-yy}'}"
                                   FontSize="Small" 
                                   TextColor="Black" 
                                   FontAttributes="Bold" 
                                   FontFamily="Boulder"/>
                            <Label Text="{Binding MuscleGroups, StringFormat='Muscle Group(s): {0}'}"
                                   FontSize="Small" 
                                   TextColor="Black" 
                                   FontAttributes="Bold" 
                                   FontFamily="Boulder"/>
                            <Label Text="{Binding Location, StringFormat='Location: {0}'}"
                                   FontSize="Small" 
                                   TextColor="Black" 
                                   FontAttributes="Bold" 
                                   FontFamily="Boulder"/>
                                                      
                            </StackLayout>
                            <Button                                 
                                HorizontalOptions="EndAndExpand"
                                Text="{Binding CompletedString}"
                                CommandParameter ="{Binding }"
                                FontSize="Large"
                                TextColor="White"
                                FontFamily="Boulder"
                                BorderColor="White"
                                BackgroundColor="#06a4cc"
                                BorderWidth="2"
                                BorderRadius="5"
                                WidthRequest="100"
                                Clicked="CompleteWorkout"/>
                        </StackLayout>
                            <Label Text="-------------" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#06a4cc" 
                                   FontSize="Small"
                                   FontFamily="Boulder"/> 
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>  
            </ListView.ItemTemplate> 
        </ListView>
    </ContentPage.Content>
</ContentPage>




