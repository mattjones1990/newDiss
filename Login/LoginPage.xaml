           <Label 
               Text = "Logo Here"
               Grid.Row="0" 
               Grid.Column="2" 
               Grid.ColumnSpan="3"
               HorizontalTextAlignment="Center" 
               VerticalTextAlignment="End"
               FontFamily="Boulder"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="White"/>

           <Entry Placeholder="Enter email address"                 
                  FontFamily="Boulder"
                  FontSize="Medium" 
                  HorizontalTextAlignment="Center"
                  x:Name="EmailField" 
                  Grid.Row="2" 
                  Grid.Column="2"
                  Grid.ColumnSpan="3"/>
           <Entry Placeholder="Enter password"
                  FontFamily="Boulder"
                  FontSize="Medium" 
                  HorizontalTextAlignment="Center"
                  x:Name="PasswordField"
                  Grid.Row="3" 
                  Grid.Column="2" 
                  Grid.ColumnSpan="3"
                  IsPassword="true"/>
           <Entry Placeholder="Enter handle"
                  FontFamily="Boulder"             
                  FontSize="Medium"
                  HorizontalTextAlignment="Center"
                  x:Name="HandleField" 
                  Grid.Row="4" 
                  Grid.Column="2"
                  Grid.ColumnSpan="3"/>

            <Button Text="Login"
                BackgroundColor="White"
                Font="Medium"
                Clicked="Handle_Clicked"
                Grid.Row="6" 
                Grid.Column="1"
                Grid.ColumnSpan="2"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="#06a4cc"/>

            <Button Text="Register"
                BackgroundColor="White"
                Font="Medium"
                Clicked="Handle_Clicked_1"
                Grid.Row="6" 
                Grid.Column="4"
                Grid.ColumnSpan="2"
                FontFamily="Boulder"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="#06a4cc"/>
    </Grid>
